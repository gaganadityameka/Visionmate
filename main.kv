BoxLayout:
    orientation: "vertical"
    Image:
        id: icon
        source: 'icon.jpg'  # Replace with your icon image path
        size_hint: None, None
        size: "100dp", "100dp"
        pos_hint: {"center_x": 0.5}

    Label:
        text: "Vision Mate"
        font_size: "24sp"
        color: 1, 1, 1, 1
        size_hint_y: None
        height: self.texture_size[1]
        pos_hint: {"center_x": 0.5}

    Label:
        id: instruction_label
        text: "Please say start to begin"
        font_size: "20sp"
        color: 1, 1, 1, 1
        size_hint_y: None
        height: self.texture_size[1]
        pos_hint: {"center_x": 0.5, "y": 0}
